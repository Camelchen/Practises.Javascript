@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/Scripts/Common")
    @Styles.Render("~/Content/Themes")

</head>
<body>
    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
<div id="wrapper">

    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li>
                <a href="/Javascript/ViewJavascriptAdvanced">JS.Advanced</a>
            </li>    
            <li>
                <a href="/Javascript/ViewJavascriptBasic">JS.Basic</a>
            </li>
            <li>
                <a href="/JSON/ViewJSON">JSON</a>
            </li>
            <li>
                <a href="/AJAX/ViewAJAX">AJAX</a>
            </li>
            <li>
                <a href="/JQuery/ViewJQuery">JQuery</a>
            </li>


        </ul>
    </div>

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>

</body>
</html>
